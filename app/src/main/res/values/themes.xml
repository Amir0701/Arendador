<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tenant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryVariant">@color/blue700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue500</item>
        <item name="colorSecondaryVariant">@color/blue500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/grey_back</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tenant.TabLayout">
        <item name="android:backgroundTint">@color/grey_back</item>
    </style>
</resources>